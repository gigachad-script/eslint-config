{
  "editorconfig": {
    "path": "./.editorconfig",
    "contents": "root = true\n\n[*]\nend_of_line = lf\ninsert_final_newline = true\nindent_style = space\nindent_size = 2\ntrim_trailing_whitespace = true\nmax_line_length = 80\n"
  },
  "eslintRc": {
    "path": "./.eslintrc.json",
    "contents": {
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "extends": [
        "@gigachad-script"
      ]
    }
  },
  "prettierRc": {
    "path": "./.prettierrc.json",
    "contents": "@gigachad-script/eslint-config/prettier"
  },
  "codeExtensions": {
    "path": "./.vscode/extensions.json",
    "contents": {
      "recommendations": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "codeSettings": {
    "path": "./.vscode/settings.json",
    "contents": {
      "[css][html][json][jsonc][javascript][javascriptreact][typescript][typescriptreact][yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      },
      "editor.codeActionsOnSave": {
        "source.fixAll": true
      },
      "editor.formatOnPaste": true,
      "editor.formatOnSave": true,
      "editor.formatOnType": true,
      "editor.rulers": [
        80
      ],
      "editor.wordWrap": "wordWrapColumn",
      "eslint.alwaysShowStatus": true,
      "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
      ]
    }
  }
}
